body
{
  min-height: 100vh;
  display: -ms-flexbox;
  display: flex;
  -ms-flex-pack: center;
      justify-content: center;
  -ms-flex-align: center;
      align-items: center;
  font-family: 'Poppins', sans-serif;
  background: url("../images/inside_airport.jpg");
  background-size: cover;
  background-position: center center;
  padding: 15px;
}

.box
{

  width: 650px;

  padding: 40px;

  position: absolute;

  top: 50%;

  left: 50%;

  transform: translate(-50%,-50%);

  background: #191919;

  text-align: center;

}

.box h1
{

  color: white;

  text-transform: uppercase;

  font-weight: 500;

}

.box status
{
  color: cyan;

  text-transform: uppercase;

  font-weight: 50;
  
  display: inline;
}

.box error_status
{
  color: cyan;

  text-transform: uppercase;

  font-weight: 50;
  
  display: inline;
}


.box input[type = "text"],.box input[type = "password"], .box input[type = "number"]
{

  border:0;

  background: none;
  
  float: left;
  
  margin: 20px auto;

  text-align: center;

  border: 2px solid #3498db;

  padding: 14px 10px;

  width: 200px;

  outline: none;

  color: white;

  border-radius: 24px;

  transition: 0.25s;

}

.box input[type = "text"]:focus,.box input[type = "password"]:focus, .box input[type = "number"]:focus
{
	
  width: 250px;

  border-color: #2ecc71;

}

.box input[type = "submit"]
{

  border:0;

  background: none;

  display: block;

  margin: 20px auto;

  text-align: center;

  border: 2px solid #2ecc71;

  padding: 14px 40px;

  outline: none;

  color: white;

  border-radius: 24px;

  transition: 0.25s;

  cursor: pointer;

}

.box input[type = "submit"]:hover
{

  background: #2ecc71;

}