<!doctype html>
{% extends "flight/base.html" %}
{% block content %}
<html>
<head>
<meta charset='utf-8'>
<meta name='viewport' content='width=device-width, initial-scale=1'>
<title>Snippet - BBBootstrap</title>
<link href='https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css' rel='stylesheet'>
<link href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css' rel='stylesheet'>
<script type='text/javascript' src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js'></script>

<link rel="stylesheet" href="{{url_for('static',filename='css/customer/view_flight.css') }}">

</head>
	<body oncontextmenu='return false' class='snippet-body'>
	<link href="https://cdn.jsdelivr.net/gh/bbbootstrap/libraries@main/datedropper.css" rel="stylesheet">
	<script src="https://cdn.jsdelivr.net/gh/bbbootstrap/libraries@main/datedropper.js"></script>

	<div class="container mt-100">
		<div class="card">
			<div class="row">
				<div class="col-md-4"> <label>From</label> <input type="text" class="form-control"> </div>
				<div class="col-md-4"> <label>To</label> <input type="text" class="form-control"> </div>
				<div class="col-md-4"> <label>Search</label> <button class="btn btn-primary pro-button w-100">Add a trip <i class="fa fa-plane ml-2"></i></button> </div>
			</div>
		</div>
	</div>
	
	<table id="data" class="table table-striped">
    <thead>
      <tr>
        <th>Airline Name</th>
        <th>Flight Number</th>
		<th>Departure Date</th>
		<th>Departure Airport</th>
		<th>Arrival Date</th>
		<th>Arrival Airport</th>
		<th>Base Price</th>
		<th>Airplane ID</th>
		<th>Airline Name</th>
        <th>Status</th>
		<th>Order</th>
      </tr>
    </thead>
    <tbody>
      {% for flight in flights %}
        <tr>
          <td>{{ flight.airline_name }}</td>
          <td>{{ flight.flight_num }}</td>
          <td>{{ flight.depart_datetime }}</td>
          <td>{{ flight.depart_airport }}</td>
          <td>{{ flight.arrival_datetime }}</td>
          <td>{{ flight.arrival_airport }}</td>
          <td>{{ flight.base_price }}</td>
          <td>{{ flight.airplane_ID }}</td>
          <td>{{ flight.airplane_airline_name }}</td>
          <td>{{ flight.status }}</td>
		  <td>		  
			<a href="{{ url_for("customer.create_order", flight_number = flight.flight_num, airline = flight.airline_name, depart_date = flight.depart_datetime) }}"><input type="submit" value="Order now!"></i></input></a>
		  </td>
        </tr>
      {% endfor %}
    </tbody>
  </table>
  

<script type='text/javascript' src='https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.bundle.min.js'></script>
<script type='text/javascript' src=''></script>
<script type='text/javascript' src=''></script>

<script type='text/Javascript'>$(document).ready(function(){
$('input').dateDropper({
});
});
</script>

	</body>
</html>