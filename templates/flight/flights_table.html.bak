{% extends "flight/base.html" %}
{% block content %}
  <table id="data" class="table table-striped">
    <thead>
      <tr>
        <th>Airline Name</th>
        <th>Flight Number</th>
		<th>Departure Date</th>
		<th>Departure Airport</th>
		<th>Arrival Date</th>
		<th>Arrival Airport</th>
		<th>Base Price</th>
		<th>Airplane ID</th>
		<th>Airline Name</th>
        <th>Status</th>
		<th>Order</th>
      </tr>
    </thead>
    <tbody>
      {% for flight in flights %}
        <tr>
          <td>{{ flight.airline_name }}</td>
          <td>{{ flight.flight_num }}</td>
          <td>{{ flight.depart_datetime }}</td>
          <td>{{ flight.depart_airport }}</td>
          <td>{{ flight.arrival_datetime }}</td>
          <td>{{ flight.arrival_airport }}</td>
          <td>{{ flight.base_price }}</td>
          <td>{{ flight.airplane_ID }}</td>
          <td>{{ flight.airplane_airline_name }}</td>
          <td>{{ flight.status }}</td>
		  <a href="{{ url_for("customer.create_order", flight_number = flight.flight_num, airline = flight.airline_name, depart_date = flight.depart_datetime) }}"><input type="submit" name="edit_btn" value="Order now!"></i></input></a>
		  <td> <button type="button" style="background:cyan; border:none; color:red;">Order now!</button></td>
        </tr>
      {% endfor %}
    </tbody>
  </table>
{% endblock %}