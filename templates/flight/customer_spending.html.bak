	<body oncontextmenu='return false' class='snippet-body'>
	<link href="https://cdn.jsdelivr.net/gh/bbbootstrap/libraries@main/datedropper.css" rel="stylesheet">
	<script src="https://cdn.jsdelivr.net/gh/bbbootstrap/libraries@main/datedropper.js"></script>

	<form action = "" method = "post">
	<div class="container mt-100">
		<div class="card">
			<div class="row">
				<div class="col-md-4"> <label>From</label> <input name = "From" type="text" data-dd-opt-format="mm-dd-y" class="form-control"> </div>
				<div class="col-md-4"> <label>To</label> <input name = "To" type="text" class="form-control"> </div>
				<div class="col-md-4"> <label>Search</label> <button type = "submit" class="btn btn-primary pro-button w-100">See trips <i class="fa fa-plane ml-2"></i></button> </div>
				
			</div>
		</div>
	</div>
	</form>
	
<b style = "margin: auto 100px"> Sum for last year: {{sum}} </b>

{% extends "flight/customer_base.html" %}
{% block content %}
	<table id="data" class="table table-striped">
    <thead>
      <tr>
        <th>Year</th>
        <th>Month</th>
		<th>Sum</th>
      </tr>
    </thead>
    <tbody>
      {% for flight in flights %}
        <tr>
          <td>{{ flight.year }}</td>
          <td>{{ flight.month }}</td>
          <td>{{ flight.sum }}</td>
        </tr>
      {% endfor %}
    </tbody>
  </table>
  
{% endblock %}


	</body>

</html>
